layout {
    pane size=1 borderless=true {
        plugin location="file:zjstatus.wasm" {
            format_left  "{mode} #[fg=green,bold]{session} {tabs}"
            format_space "#[bg=bg]"

            mode_normal       "#[bg=cyan] "
            mode_locked       "#[fg=#585b70,bg=magenta] 󰌾  "
            mode_pane         "#[fg=#585b70,bg=red] 󱏂  {name} "
            mode_tab          "#[fg=#585b70,bg=red] 󱂬  {name} "
            mode_session      "#[fg=#585b70,bg=magenta] 󰨣  {name} "
            mode_resize       "#[fg=#585b70,bg=green] 󰩨  {name} "
            mode_scroll       "#[fg=#585b70,bg=green] 󰦨  {name} "
            mode_enter_search "#[fg=#585b70,bg=green] 󱎸 󰏫  {name} "
            mode_search       "#[fg=#585b70,bg=green] 󱎸  {name} "

            tab_normal   "#[fg=white,bg=#6C7086,bold,italic] {index} #[fg=#6C7086,bg=bg,bold,italic] {name} "
            tab_active   "#[fg=#ffffff,bg=blue,bold] {index} #[fg=#ffffff,bg=bg,bold] {name} "
        }
    }
    pane 
    pane size=1 borderless=true {
        plugin location="zellij:status-bar"
    }
}
